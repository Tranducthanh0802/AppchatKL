<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <import type="com.example.appchatkl.ui.content.chat.ChatViewModel"/>
        <variable
            name="chat"
            type="ChatViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/linea_top"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/left"
                android:id="@+id/back"
                android:layout_marginTop="@dimen/_5sdp"
                android:contentDescription="@string/imageback" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avata_top"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
             android:src="@drawable/personal1"
                android:layout_marginStart="@dimen/_10sdp" />
            <TextView
                android:id="@+id/namefull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/edit"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_10sdp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewmessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/linea_bot"
            android:layout_below="@id/linea_top"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="38dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homnay"
            android:textColor="@color/black"
            android:textSize="@dimen/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_60sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linea_bot"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/photo"
                    android:id="@+id/storage_img"
                    android:background="@drawable/photo_design"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@id/img_send"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@id/img_send"
                        android:layout_marginEnd="@dimen/_10sdp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:background="@drawable/photo_design"
                            android:paddingRight="@dimen/_40sdp"
                            android:id="@+id/edt_input"
                            android:hint="@string/nhaptinnhan"
                            android:paddingEnd="@dimen/_40sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:inputType="text"
                            android:autofillHints="" />
                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/smile"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:contentDescription="@string/imageIcon"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/send"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/img_send"
                        android:visibility="gone"
                        android:contentDescription="@string/imageSend"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:visibility="gone"
                android:id="@+id/rec_bot"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>
